<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Pyszne address</th>
      <th>Picture address</th>
      <th>Meal type</th>
      <th>City</th>
      <th>Street</th>
      <th>Zip code</th>
      <th>Website</th>
      <th>Category</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.pyszne_address %></td>
        <td><%= restaurant.picture_address %></td>
        <td><%= restaurant.meal_type %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.street %></td>
        <td><%= restaurant.zip_code %></td>
        <td><%= restaurant.website %></td>
        <td><%= restaurant.category %></td>
        <td><%= restaurant.latitude %></td>
        <td><%= restaurant.longitude %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

